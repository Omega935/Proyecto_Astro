---
interface Props {
	title: string;
	href: string;
	img: string;
}

const { href, title, img } = Astro.props;
---

<div class="card">
    <a href={href}>
        <div class="image-container">
            <img src={img} alt={title} />
        </div>
        <div class="text-container">
            <h3>{title}</h3>
        </div>
    </a>
</div>

<style>
    .card {
		width: 100%;
		height: 100%;
        background-color: #ff6a3b;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
        overflow: hidden;
    }

    .card:hover {
        box-shadow: 0 8px 12px rgba(126, 126, 126, 0.2);
    }

    .card a {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5em;
        width: 100%;
        height: 100%;
    }

    .image-container {
		width: 100%;
		height: 160px;
		overflow: hidden;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .text-container {
        padding: 5px;
        text-align: center;
    }

    .text-container h3 {
        font-size: 1.2rem;
    }
</style>
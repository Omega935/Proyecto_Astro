---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<div class="comandas">
    <h1>{title}</h1>
    <button>Sonido</button>
</div>

<style>

.comandas {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2px solid;
    height: 61px;
    width: 100%;
}

.comandas button {
    background-color: #4CAF50;
    border: none;
    color: white;
    padding: 8px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 18px;
    cursor: pointer;
    border-radius: 6px;
}
</style>